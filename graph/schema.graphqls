# GraphQL schema example
#
# https://gqlgen.com/getting-started/
scalar Map
scalar Any

type Node {
  id: ID!
  type: String!
  attributes: Map!
}

input Filter {
  key: String!
  operator: String!
  value: Any!
}

input QueryNodes {
  type: String!
  filters: [Filter]
  limit: Int!
}


type Query {
  nodes(input: QueryNodes!): [Node!]!
}

input NewNode {
  type: String!
  attributes: Map!
}

type Mutation {
  createNode(input: NewNode!): Node!
}